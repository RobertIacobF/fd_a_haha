<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="aroundwise.nepi.activities.discoverActivity.fragments.loyaltyFragment.LoyaltyFragment">

    <aroundwise.nepi.util.views.CustomActionBar
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:elevation="5dp"
        app:actionbarTitle="@string/loyalty_caps"
        app:hasSearch="false"
        app:hasSpinner="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actionbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <aroundwise.nepi.util.views.SAutoBgButton
                android:id="@+id/btn_getMorePoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/rl_get_more_points"
                android:layout_alignLeft="@+id/rl_get_more_points"
                android:layout_alignRight="@+id/rl_get_more_points"
                android:layout_alignTop="@+id/rl_get_more_points"
                android:background="@drawable/button_transparent_layout"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/rl_get_more_points"
                android:layout_width="match_parent"
                android:layout_height="@dimen/loyalty_bottom_height"
                android:layout_below="@+id/rl_beneficii"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_more_points"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_loyalty_get_more_points" />

                <TextView
                    fontPath="fonts/ProximaNova-Light.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@+id/iv_more_points"
                    android:text="@string/getmore_points_learn_how" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_loyalty_get_points_arrow" />

            </RelativeLayout>

            <aroundwise.nepi.util.views.SAutoBgButton
                android:id="@+id/btn_getRewards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/rl_get_rewards"
                android:layout_alignLeft="@+id/rl_get_rewards"
                android:layout_alignRight="@+id/rl_get_rewards"
                android:layout_alignTop="@+id/rl_get_rewards"
                android:background="@drawable/button_transparent_layout"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/rl_get_rewards"
                android:layout_width="match_parent"
                android:layout_height="@dimen/loyalty_bottom_height"
                android:layout_below="@+id/rl_reward"
                android:background="@color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_rewards"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_loyalty_get_rewards" />

                <TextView
                    fontPath="fonts/ProximaNova-Light.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@+id/iv_rewards"
                    android:text="@string/get_rewards"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_loyalty_get_rewards_arrow" />

            </RelativeLayout>

            <aroundwise.nepi.util.views.SAutoBgButton
                android:id="@+id/btn_beneficii"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/rl_beneficii"
                android:layout_alignLeft="@+id/rl_beneficii"
                android:layout_alignRight="@+id/rl_beneficii"
                android:layout_alignTop="@+id/rl_beneficii"
                android:background="@drawable/button_transparent_layout"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/rl_beneficii"
                android:layout_width="match_parent"
                android:layout_height="@dimen/loyalty_bottom_height"
                android:layout_below="@+id/rl_get_rewards"
                android:background="@color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_beneficii"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_loyalty_get_rewards" />

                <TextView
                    fontPath="fonts/ProximaNova-Light.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@+id/iv_beneficii"
                    android:text="@string/beneficii"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_loyalty_get_rewards_arrow" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_reward"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:background="#B0b56abc"
                    android:scaleType="centerCrop" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tv_points"
                        style="@style/loyalty_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6800"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/tv_points_text"
                        style="@style/loyalty_text_view"
                        fontPath="fonts/ProximaNova-Bold.otf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_points"
                        android:layout_marginTop="3dp"
                        android:text="@string/points_caps"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_change_reward_old"
                        style="@style/loyalty_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_points_text"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:padding="5dp"
                        android:text="@string/change_reward"
                        android:textColor="#deb9d2"
                        android:visibility="gone" />

                    <com.github.lzyzsd.circleprogress.DonutProgress
                        android:id="@+id/loyalty_reward_progress"
                        android:layout_width="161dp"
                        android:layout_height="161dp"
                        android:layout_below="@+id/tv_points_text"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="48dp"
                        android:rotation="-90"
                        app:donut_finished_color="#FFFFFF"
                        app:donut_finished_stroke_width="2dp"
                        app:donut_progress="70"
                        app:donut_text_color="#00000000"
                        app:donut_unfinished_color="#66ffffff"
                        app:donut_unfinished_stroke_width="2dp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/loyalty_iv_reward"
                        android:layout_width="148dp"
                        android:layout_height="148dp"
                        android:layout_below="@+id/tv_points_text"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="55dp"
                        android:clickable="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_product_demo" />

                    <TextView
                        android:id="@+id/tv_change_reward"
                        style="@style/loyalty_text_view"
                        fontPath="fonts/ProximaNova-Bold.otf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/loyalty_iv_reward"
                        android:layout_marginTop="20dp"
                        android:clickable="true"
                        android:padding="5dp"
                        android:text="@string/change_reward"
                        android:textColor="@android:color/white"
                        android:textSize="8sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tv_need_points"
                        style="@style/loyalty_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/loyalty_iv_reward"
                        android:layout_marginTop="20dp"
                        android:text="@string/you_need_320_points"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="270dp">

                        <aroundwise.nepi.util.views.SAutoBgButton
                            android:id="@+id/btn_scan_receipt"
                            fontPath="fonts/ProximaNova-Semibold.otf"
                            android:layout_width="200dp"
                            android:layout_height="60dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/shape_pink_rounded_button"
                            android:drawablePadding="-30dp"
                            android:drawableRight="@drawable/icon_arrow_right"
                            android:paddingRight="30dp"
                            android:text="@string/scan_receipt"
                            android:textAllCaps="false"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:visibility="visible" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@android:color/transparent"
                            android:src="@drawable/glow_fulll" />

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/layout_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/black_transparent"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="visible" />

    </RelativeLayout>
</RelativeLayout>
