<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="aroundwise.nepi.activities.discoverActivity.fragments.storesFragment.storesGetPointsFragments.StorePurchasePointsFragment">

    <aroundwise.nepi.util.views.CustomActionBar
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:elevation="5dp"
        app:actionbarTitle="@string/get_points_caps"
        app:hasBackButton="true"
        app:hasSearch="false"
        app:hasSpinner="false" />

    <RelativeLayout
        android:id="@+id/rl_description"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/actionbar"
        android:layout_marginTop="12dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_and_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:src="@drawable/icon_store_get_points_and_sign" />

        <ImageView
            android:id="@+id/iv_store_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iv_and_symbol"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_and_symbol"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_spend"
                fontPath="fonts/ProximaNova-Semibold.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/spend"
                android:textColor="@color/tv_get_points_spend" />

            <TextView
                android:id="@+id/tv_spend_points_number"
                fontPath="fonts/ProximaNova-Light.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/tv_points_number"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_spend_type"
                fontPath="fonts/ProximaNova-Regular.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dollars"
                android:textColor="@color/tv_dollars" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_and_symbol"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_get"
                fontPath="fonts/ProximaNova-Semibold.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/get_caps"
                android:textColor="@color/tv_get_points_spend" />

            <TextView
                android:id="@+id/tv_get_points"
                fontPath="fonts/ProximaNova-Light.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textColor="@color/tv_points_number"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_points"
                fontPath="fonts/ProximaNova-Regular.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/points_caps"
                android:textColor="@color/tv_dollars" />

        </LinearLayout>


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_description">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_1"
                style="@style/walk_in_rl"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="12dp"
                android:paddingLeft="10dp">

                <ImageView
                    android:id="@+id/iv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_walk_in_1" />

                <ImageView
                    android:id="@+id/iv_purchase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv_1"
                    android:src="@drawable/icon_loyalty_purchase_2" />

                <TextView
                    style="@style/walk_in_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_purchase"
                    android:text="@string/cump_r" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_2"
                style="@style/walk_in_rl"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@+id/rl_1"
                android:paddingLeft="10dp">

                <ImageView
                    android:id="@+id/iv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_walk_in_2" />

                <ImageView
                    android:id="@+id/iv_scan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv_2"
                    android:src="@drawable/icon_photo_aparat" />

                <TextView
                    style="@style/walk_in_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_scan"
                    android:text="@string/scan_the_receipt" />

            </RelativeLayout>


            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_2"
                android:layout_centerInParent="true">

                <aroundwise.nepi.util.views.SAutoBgButton
                    android:id="@+id/btn_scan_receipt"
                    fontPath="fonts/ProximaNova-Semibold.otf"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape_pink_rounded_button"
                    android:drawablePadding="-30dp"
                    android:drawableRight="@drawable/icon_arrow_right"
                    android:paddingRight="30dp"
                    android:text="@string/scan_receipt"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:visibility="visible" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/glow_fulll" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
