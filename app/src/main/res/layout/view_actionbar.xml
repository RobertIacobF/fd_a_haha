<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/actionbar_rl_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:gravity="center"
        android:padding="3dp"
        android:tag="Bottom3"
        android:visibility="gone"
        android:weightSum="10">

        <ImageButton
            android:id="@+id/actionbar_btn_cancel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:padding="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_appbar_close_button" />

        <EditText
            android:id="@+id/actionbar_et_search"
            fontPath="fonts/ProximaNova-Light.otf"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/actionbar_btn_filter"
            android:layout_toRightOf="@+id/actionbar_btn_cancel"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/icon_appbar_search_button"
            android:drawablePadding="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/caut"
            android:imeOptions="actionSearch"
            android:paddingLeft="5dp"
            android:paddingRight="70dp"
            android:singleLine="true"
            android:textSize="12sp" />


        <ImageButton

            android:id="@+id/actionbar_btn_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:background="@android:color/transparent"
            android:padding="6dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_appbar_filter_button"
            android:visibility="invisible" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/actionbar_rl_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:visibility="visible">

        <Button
            android:id="@+id/actionbar_btn_back"
            fontPath="fonts/ProximaNova-Regular.otf"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/icon_loyalty_back_arrow"
            android:text="@string/back"
            android:textColor="@color/appbar_title_color_dark"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/actionbar_title"
            fontPath="fonts/ProximaNova-Regular.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:minHeight="@dimen/abc_action_bar_default_height_material"
            android:text="@string/promenada"
            android:textColor="@color/appbar_title_color_dark"
            android:textSize="14sp" />

        <aroundwise.nepi.util.views.CustomSpinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:minHeight="@dimen/abc_action_bar_default_height_material"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/actionbar_location_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:src="@drawable/icon_location_stores_map"
            android:visibility="invisible" />


        <ImageButton
            android:id="@+id/actionbar_btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:padding="6dp"
            android:src="@drawable/icon_appbar_search_button"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:text="@string/ok"
            android:textColor="@color/appbar_title_color_dark"
            android:textSize="12sp"
            android:visibility="invisible" />


    </RelativeLayout>


</RelativeLayout>
