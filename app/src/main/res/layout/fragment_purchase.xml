<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="aroundwise.nepi.activities.discoverActivity.fragments.loyaltyFragment.getPointsFragment.WalkInFragment">

    <aroundwise.nepi.util.views.CustomActionBar
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:elevation="5dp"
        app:actionbarTitle="@string/get_points_caps"
        app:hasBackButton="true"
        app:hasSearch="false"
        app:hasSpinner="false" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/iv_top"
        android:layout_alignTop="@+id/iv_top"
        android:background="@android:color/white" />

    <ImageView
        android:id="@+id/iv_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actionbar"
        android:src="@drawable/icon_loyalty_get_points_purchase"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actionbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:src="@drawable/icon_loyalty_purchase" />

    <TextView
        android:id="@+id/tvFirst"
        fontPath="fonts/ProximaNova-Light.otf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/prime_te_puncte_pentru_cump_r_turi" />

    <TextView
        android:id="@+id/tvsecond"
        fontPath="fonts/ProximaNova-Light.otf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvFirst"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:text="@string/cump_r_i_prime_te_puncte"
        android:textColor="#9f9f9f"
        android:textSize="10sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_top"
        android:layout_marginTop="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rlContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/shape_purchase_walk_in_loyalty"
                android:elevation="5dp">

                <RelativeLayout
                    android:id="@+id/rl_1"
                    style="@style/walk_in_rl"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginRight="1dp"
                    android:paddingLeft="10dp">

                    <ImageView
                        android:id="@+id/iv_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_walk_in_1" />

                    <ImageView
                        android:id="@+id/iv_partner_shops"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/iv_1"
                        android:src="@drawable/icon_walk_in_partner_shops" />

                    <TextView
                        style="@style/walk_in_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/iv_partner_shops"
                        android:text="@string/find_our_partners_shop" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_2"
                    style="@style/walk_in_rl"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_below="@+id/rl_1"
                    android:layout_marginRight="1dp"
                    android:paddingLeft="10dp">

                    <ImageView
                        android:id="@+id/iv_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_walk_in_2" />

                    <ImageView
                        android:id="@+id/iv_bluetooth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/iv_2"
                        android:src="@drawable/icon_loyalty_purchase_2" />

                    <TextView
                        style="@style/walk_in_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/iv_bluetooth"
                        android:text="@string/make_purchase_low_case" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_3"
                    style="@style/walk_in_rl"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_below="@+id/rl_2"
                    android:layout_marginRight="1dp"
                    android:paddingLeft="10dp">

                    <ImageView
                        android:id="@+id/iv_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_walk_in_3" />

                    <ImageView
                        android:id="@+id/iv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/iv_3"
                        android:src="@drawable/icon_loyalty_photo" />

                    <TextView
                        style="@style/walk_in_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/iv_phone"
                        android:text="@string/scan_the_receipt" />

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/rlContent"
                android:layout_centerHorizontal="true">

                <aroundwise.nepi.util.views.SAutoBgButton
                    android:id="@+id/btn_scan_receipt"
                    fontPath="fonts/ProximaNova-Semibold.otf"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape_pink_rounded_button"
                    android:drawablePadding="-30dp"
                    android:drawableRight="@drawable/icon_arrow_right"
                    android:paddingRight="30dp"
                    android:text="@string/scan_receipt"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:visibility="visible" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/glow_fulll" />

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
