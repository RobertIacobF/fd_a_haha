<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyCustomTheme" parent="@android:style/Theme.Panel">
        <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>
    </style>

    <style name="MyAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/anim_in</item>
        <item name="android:windowExitAnimation">@anim/anim_out</item>
    </style>


    <style name="edit_text_bottom_line" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorControlNormal">@color/white</item>
        <item name="android:colorControlActivated">@color/white</item>
        <item name="android:colorControlHighlight">@color/white</item>
    </style>

    <style name="LoginButton">
        <item name="fontPath">fonts/Montserrat-Bold.otf</item>
        <item name="android:background">@drawable/shape_loggin_button</item>
        <item name="android:width">112dp</item>
        <item name="android:height">56dp</item>
        <item name="android:textColor">@color/login_text_color</item>
    </style>

    <style name="RegisterText">
        <item name="fontPath">fonts/Montserrat-Regular.otf</item>
        <item name="android:textColor">@color/login_text_color</item>
    </style>

    <style name="vpiCirclePageIndicatorStyle" parent="AppTheme" />

    <style name="RegisterEditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:theme">@style/edit_text_bottom_line</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">start</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="main_tab_style">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">25</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">6sp</item>
        <item name="android:textColor">#8d9295</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="main_tab_style1">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">25</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="settings_account_title">
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:textColor">#858585</item>
        <item name="android:textSize">12sp</item>
        <item name="fontPath">fonts/ProximaNova-Regular.otf</item>
    </style>

    <style name="settings_account_editable">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textColor">@color/editable_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="fontPath">fonts/ProximaNova-Light.otf</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
    </style>

    <style name="settings_separator_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/separator_profile_color</item>
    </style>

    <style name="FilterTitleStyle">
        <item name="android:textColor">@color/text_color_light_gray</item>
        <item name="android:textSize">9sp</item>
        <item name="android:layout_marginLeft">11dp</item>
    </style>

    <style name="loyalty_text_view">
        <item name="android:letterSpacing">0.1</item>
        <item name="fontPath">fonts/ProximaNova-Light.otf</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="walk_in_text_view">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="fontPath">fonts/ProximaNova-Light.otf</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="walk_in_rl">
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="button_pink">
        <item name="android:background">@drawable/shape_pink_rounded_button</item>
        <item name="android:padding">30dp</item>
        <item name="android:drawableRight">@drawable/icon_arrow_right</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontPath">fonts/ProximaNova-Semibold.otf</item>
    </style>

    <style name="tv_stores_nr_points">
        <item name="fontPath">fonts/ProximaNova-Light.otf</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">6dp</item>
    </style>

    <style name="tv_stores_points">
        <item name="android:text">PUNCTE</item>
        <item name="fontPath">fonts/ProximaNova-Semibold.otf</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tv_stores_for_action">
        <item name="fontPath">fonts/ProximaNova-Regular.otf</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tv_dialog_store_info">
        <item name="fontPath">fonts/ProximaNova-Light.otf</item>
        <item name="android:textColor">@color/tv_store_info_color</item>
    </style>

    <style name="tv_store_details">
        <item name="fontPath">fonts/ProximaNova-Light.otf</item>
        <item name="android:textColor">#313131</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="tv_profile">
        <item name="android:textColor">@color/white</item>
        <item name="fontPath">fonts/BebasNeue-Bold.otf</item>
    </style>

    <style name="tv_profile_tab">
        <item name="fontPath">fonts/ProximaNova-Regular.otf</item>
        <item name="android:textColor">#a9a9a9</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="label_profile_settings">
        <item name="fontPath">fonts/ProximaNova-Regular.otf</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#cdcdcd</item>
    </style>

    <style name="label_value_profile_settings">
        <item name="android:layout_marginTop">6dp</item>
        <item name="fontPath">fonts/ProximaNova-Light.otf</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
    </style>
</resources>
